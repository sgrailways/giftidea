<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sgrailways"
    android:versionCode="1"
    android:versionName="1.0-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".giftidea.HelloAndroidActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".giftidea.IdeaActivity" >
          <meta-data
                  android:name="android.support.PARENT_ACTIVITY"
                  android:value=".HelloAndroidActivity" />
        </activity>
        <activity android:name=".giftidea.RecipientIdeasActivity" >
          <meta-data
                  android:name="android.support.PARENT_ACTIVITY"
                  android:value=".HelloAndroidActivity" />
        </activity>
    </application>

</manifest>
